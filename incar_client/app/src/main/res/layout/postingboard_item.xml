<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_corner"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/postingboard_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_user"
            android:contentDescription="@mipmap/icon_user"
            android:layout_marginTop="5dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/postingboard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="김 XX" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postingboard_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carpoolregister_type_departure" />

        <TextView
            style="@style/posting_item"
            android:id="@+id/postingboard_destination"
            android:text="@string/carpoolregister_type_destination" />

        <TextView
            style="@style/posting_item"
            android:id="@+id/postingboard_date"
            android:text="날짜" />
        <TextView
            style="@style/posting_item"
            android:id="@+id/postingboard_time"
            android:text="시간" />

    </LinearLayout>


</LinearLayout>