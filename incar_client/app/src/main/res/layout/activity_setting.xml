<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="ac.inhaventureclub.incar.activity.SettingActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="45"
        tools:context=".activity.MainPageActivity">

        <!-- top section with menu and logo -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"

            android:layout_weight="39">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/setting" />

                    <TextView
                        android:id="@+id/tv_programmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설정"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"
                        android:textSize="30sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개인정보"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:background="@color/colorGrey"
                        android:textSize="25sp"/>

                    <Button
                        android:id="@+id/btn_user_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="계정정보"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:background="@color/white"
                        android:textSize="25dp"/>

                    <Button
                        android:id="@+id/btn_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위치정보 이용동의"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="약관 및 정책"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="25dp"
                        android:textColor="#000000"
                        android:background="@color/colorGrey"
                        android:textSize="25sp"/>

                    <Button
                        android:id="@+id/btn_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="서비스 이용약관"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <Button
                        android:id="@+id/btn_location_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위치기반서비스 이용약관"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <Button
                        android:id="@+id/btn_personal_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개인정보 처리 방침"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="25dp"/>

                    <Button
                        android:id="@+id/btn_information_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정보 제공처"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="25dp"/>


                    <Button
                        android:id="@+id/btn_open_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:text="오픈소스 정보"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="고객지원"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="25dp"
                        android:textColor="#000000"
                        android:background="@color/colorGrey"
                        android:textSize="25sp"/>

                    <Button
                        android:id="@+id/btn_advice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="도움말"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textSize="25dp"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>