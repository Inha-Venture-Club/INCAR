<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_corner"
    >

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/post_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/icon_user"
            android:contentDescription="@mipmap/icon_user"
            android:layout_marginTop="5dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="김 XX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/post_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carpoolregister_type_departure" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/post_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carpoolregister_type_destination" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/post_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/post_edit"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="수정" />

            <Button
                android:id="@+id/post_delete"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="삭제" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>