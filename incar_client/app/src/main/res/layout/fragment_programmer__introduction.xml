<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="45"
        tools:context=".activity.MainPageActivity">

        <!-- top section with menu and logo -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="39">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:background ="@drawable/inven_logo"/>
                    <!-- app:srcCompat="@drawable/inven_logo"-->


                    <TextView
                        android:id="@+id/tv_programmer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:text="개발자 소개"
                        android:textColor="#000000"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="소속"
                        android:layout_marginStart="6dp"
                        android:textColor="#A9A9A9"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="인하벤처클럽"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개발자"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="6dp"
                        android:textColor="#A9A9A9"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="컴퓨터공학과          14 박주원"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="컴퓨터공학과          16 김진우"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정보통신공학과      18 홍다솔"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="정보통신공학과      18 조민경"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="동아리 소개"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="6dp"
                        android:textColor="#A9A9A9"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/club_introduction"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#000000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>