<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="ac.inhaventureclub.incar.activity.EmailCertificationActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CFD8DC"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="이메일 인증하기"
            android:textSize="30sp" />

        <Button
            android:id="@+id/emailSend_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#FFFFFF"
            android:text="인증 번호 발송"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/emailAuth_number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:hint="인증 번호를 입력해 주세요"
            android:paddingLeft="10dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="이메일로 발송 된 인증 번호를 적어주세요."
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/emailAuth_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#FFFFFF"
            android:text="OK"
            android:textSize="22sp" />

    </LinearLayout>
</layout>
